<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<!-- 覆盖之前生成的文件命令：-Dmybatis.generator.overwrite=true mybatis-generator:generate -->
	<context id="MySQLTables" targetRuntime="MyBatis3">
		<commentGenerator>
			<!-- 不生成注释 -->
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://127.0.0.1/c76-s3-xm?serverTimezone=UTC&amp;CharacterEncoding=UTF-8&amp;useSSL=false"
			userId="root" password="a">
			<property name="nullCatalogMeansCurrent" value="true" />
		</jdbcConnection>

		<!-- 实体类包名 -->
		<javaModelGenerator
			targetPackage="com.yc.xm.bean" targetProject="src/main/java">
			<!-- 字符串属性加入 trim 函数 -->
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!-- Dao类包名 -->
		<sqlMapGenerator targetPackage="com.yc.xm.dao"
			targetProject="src/main/java">
		</sqlMapGenerator>

		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.yc.xm.dao" targetProject="src/main/java">
		</javaClientGenerator>


		<!-- % 表示所有表，更改时间类型 -->
		<table tableName="cart">
			<!-- 配置自增列 -->
			<generatedKey column="cid" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="comment">
			<!-- 配置自增列 -->
			<generatedKey column="id" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="order">
			<!-- 配置自增列 -->
			<generatedKey column="oid" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="order_details">
			<!-- 配置自增列 -->
			<generatedKey column="orid" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="product">
			<!-- 配置自增列 -->
			<generatedKey column="proid" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="product_img">
			<!-- 配置自增列 -->
			<generatedKey column="imgsid" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="product_type">
			<!-- 配置自增列 -->
			<generatedKey column="pid" sqlStatement="mysql" identity="true" />
		</table>
		<table tableName="user">
			<!-- 配置自增列 -->
			<generatedKey column="uid" sqlStatement="mysql" identity="true" />
		</table>
	</context>
</generatorConfiguration>